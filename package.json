		"@types/node": "^20.14.2",
		"eslint": "^9.4.0",
		"eslint-plugin-typescript-sort-keys": "^3.2.0",
		"globals": "^15.4.0",
		"local-repl": "^4.0.0",
		"nock": "^13.5.4",
		"np": "^10.0.5",
		"prettier": "^3.3.1",
