	"description": "Client library for the Perspective API",
	"keywords": [
		"perspective",
		"perspective-api"
	],
	"repository": "sloria/perspective-api-client",
	"license": "MIT",
	"author": {
		"name": "Kenton Duprey",
		"email": "dev@kentonduprey.com",
		"url": "https://kentonduprey.com"
	},
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
